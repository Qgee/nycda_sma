<h1> STUDENTS!!! </h1>



<ul>
	<% @students.each do |student| %>
		<li>
			<span> <%= link_to(student.first_name, student_path(student)) %> </span> | 
			<span> <%= student.last_name %> </span> | 
			<span> <%= student.email %> </span> | 
			<span> <%= student.phone %> </span>	
      <span> <%= link_to("Delete",student_path(student), method: :delete, data: {confirm: "Are you sure you want to delete this student?"}) %>
		</li>
	<% end %>
</ul>

<%= button_to("Add New Student", new_student_path, method: :get) %>