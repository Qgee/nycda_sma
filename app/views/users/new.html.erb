<h1> Sign Up </h1>

<%= flash[:notice] if flash[:notice] %>
<%= flash[:alert] if flash[:alert] %>


<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id = "error_explanation">

      <h2>The following <%= pluralize(@user.errors.count, "error")%> prevented this user from being saved.</h2>
      <ul>
        <% @user.errors.full_messages.each do |error| %>
          <li>
              <%= error %>
          </li>
        <%end%>
      </ul> 
    </div>
  <%end%>


  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
  </div>
  
  <%= f.submit "Sign-up"%>

<% end %>