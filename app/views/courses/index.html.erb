<h1> Course Roster </h1>

<ul>
  <% @courses.each do |course| %>
    <li>
      <span> <%= link_to(course.name, course_path(course))%> </span> 
      <span> <%= link_to("Delete",course_path(course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"}) %>
    </li>
  <% end %>
</ul>

<%= button_to("Add New Course", new_course_path, method: :get) %>